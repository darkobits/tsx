{
  "extends": "@darkobits/ts/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "lib": [
      // Types we need that are not provided by the base configuration.
      "DOM",
      "DOM.Iterable",
      // Types provided by the base configuration that we must re-add because
      // TypeScript does not merge this option.
      "ESNext",
      "ES2022"
    ]
  }
}
